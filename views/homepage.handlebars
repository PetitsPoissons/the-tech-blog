<div class="col-auto">
  {{#each posts as |post|}}
  <div class="row d-block post-preview">
    <h3 class="post-title">
      <a href="/post/{{ post.id }}">{{ post.title }}</a>
    </h3>
    <p class="post-text">{{ post.content }}</p>
    <p class="meta">Posted by {{ post.user.username }} on {{ format_date post.created_at }} ({{ post.comments.length }} {{ format_plural "comment" post.comments.length }})</p>
  </div>
  {{/each}}
</div>
<script src="js/home.js"></script>