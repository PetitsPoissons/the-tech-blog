
<section class="row d-block w-100 my-3">
  <h3>Create New Post</h3>
  <form class="new-post-form w-100">
    <input type="text" class="new-post-title my-3 w-100" name="new-post-title" placeholder="title" />
    <textarea class="w-100 mt-3" name="new-post-content" placeholder="text"></textarea>
    <button type="submit" class="w-100 my-3 btn btn-primary">Create</button>
  </form>
</section>

{{#if posts.length}}
<section class="row d-block w-100 mt-3">
  <h3>Your Posts</h3>
  <ul>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{ post.id }}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/js/add-post.js"></script>
