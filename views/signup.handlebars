<div class="card w-100">
  <div class="card-header">
    <h4>New blogger? Please sign up</h4>
  </div>
  <div class="card-body">
    <form class="signup-form">
      <div class="form-group">
        <label for="username-signup">Username</label>
        <input type="text" class="form-control" id="username-signup">
      </div>
      <div class="form-group">
        <label for="password-signup">Password</label>
        <input type="password" class="form-control" id="password-signup">
      </div>
      <button type="submit" class="btn btn-primary">SIGN UP</button>
      <p>Existing blogger? <a href="/login" class="card-link">Login instead</a></p>
    </form>
  </div>
</div>
<script src="/js/signup.js"></script>