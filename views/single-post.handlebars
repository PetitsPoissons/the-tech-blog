{{> post-info post }}

<hr class="w-100">

<div class="row w-100 my-3 comments">
  <div class="col-2">
    <h5>Comments</h5>
  </div>
  <div class="col-10">
    
    {{> comments post.comments}}
    
    {{#if loggedIn}}
    <div class="row d-block mb-3 mr-2">
      <form class="comment-form">
        <div>
          <textarea class="w-100 mt-3 p-2 comment-area" name="comment-body" placeholder="your comment"></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100"><i class="fas fa-plus plus-icon"></i>  Add Comment</button>
      </form>
    </div>
    {{/if}}
  </div>
</div>

{{#if loggedIn}}
  <script src="/js/comment.js"></script>
{{/if}}