
{{> post-info post }}

<hr class="w-100">

<div class="row w-100 my-3 comments">
  <div class="col-2">
    <h5>Comments</h5>
  </div>
  <div class="col-10">
    {{#each post.comments}}
    <section class="row d-block mb-3 pl-3 comment">
      <div class="comment-text">
        {{ comment_text }}
      </div>
      <div class="meta">
        by {{ user.username }} on {{ format_date created_at }}
      </div>
    </section>
    {{/each}}
    {{#if loggedIn}}
    <form class="comment-form">
      <div>
        <textarea class="w-100 mt-3 comment-area" name="comment-body" placeholder="your comment"></textarea>
      </div>
      <button type="submit" class="btn btn-primary w-100 my-2">Add Comment</button>
    </form>
    {{/if}}
  </div>
</div>

{{#if loggedIn}}
  <script src="/js/comment.js"></script>
{{/if}}