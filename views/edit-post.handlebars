<section class="row w-100 my-3">
  <div class="row d-block w-100">
    <a href="/dashboard" class="back">&larr; Back to dashboard</a>
    <h3 class="mt-3">Edit Post</h3>
    <form class="edit-post-form w-100">
      <div>
        <input type="text" class="new-post-title my-3 p-2 w-100" name="edit-post-title" value="{{ post.title }}" />
      </div>
      <div>
        <textarea class="w-100 mt-3 p-2" name="edit-post-content" value="{{ post.content }}">{{ post.content }}</textarea>
      </div>
      <button type="submit" class="w-100 mt-3 btn btn-primary" id="edit-btn"><i class="fas fa-save plus-icon" id="plus-icon"></i><span>  Save Changes</span></button>
      <button type="submit" class="w-100 btn btn-light" id="del-btn"><i class="fas fa-trash-alt"></i><span>  Delete Post</span></button>
    </form>
  </div>
  <div class="row d-block w-100 mt-3">
    <div class="row d-block ml-5 mr-2">
      <h4 class="my-3">Comments:</h4>
      <form class="comment-form ml-5">
        <div>
          <textarea class="w-100 mt-3 p-2" name="comment-body" placeholder="your comment"></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100 mb-2"><i class="fas fa-plus plus-icon"></i><span>  Add Comment</span></button>
      </form>
    </div>
    <div class="row d-block ml-5 mr-2 mt-3">
      {{#if post.comments.length}}
        {{> comments post.comments}}
      {{/if}}
    </div>
  </div>
</section>
<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comment.js"></script>