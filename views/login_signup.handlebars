<main class="d-flex flex-row justify-space-between">
  <div class="col-6 mr-3 pr-3">
    <h4>Current user? Please log in:</h4>
    <form class="login-form">
      <div class="form-group">
        <label for="username-login">Username</label>
        <input type="text" class="form-control" id="username-login" placeholder="Enter your username">
      </div>
      <div class="form-group">
        <label for="password-login">Password</label>
        <input type="password" class="form-control" id="password-login" placeholder="Enter your password">
      </div>
      <div>
        <button type="submit" class="btn btn-primary">LOGIN</button>
      </div>
    </form>
  </div>

  <div class="col-6 ml-3 pl-3">
    <h4>New user? Please sign up:</h4>
    <form class="signup-form">
      <div class="form-group">
        <label for="username-signup">Username</label>
        <input type="text" class="form-control" id="username-signup" placeholder="Enter a username">
      </div>
      <div class="form-group">
        <label for="password-signup">Password</label>
        <input type="password" class="form-control" id="password-signup" placeholder="Enter a password">
      </div>
      <div>
        <button type="submit" class="btn btn-primary">SIGN UP</button>
      </div>
    </form>
  </div>
</main>
<script src="/js/login.js"></script>